@page "{id:int}"
@model Eksamensprojekt___Gruppe_7.Pages.AnimalFolder.DeleteAnimalModel
@using Eksamensgruppe_7___ClassLibrary.Models

@{
    ViewData["Title"] = "Slet dyr";
}

<h2>Er du sikker på, at du vil slette dette dyr?</h2>
<hr />

<div class="alert alert-warning">
    <strong>@Model.Animal.Name</strong><br />
    Race: @Model.Animal.Race <br />
    Chipnummer: @Model.Animal.ChipNumber <br />
    Størrelse: @Model.Animal.Size <br />
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Bekræft sletning</button>
    <a asp-page="Animal" class="btn btn-secondary">Annuller</a>
</form>
