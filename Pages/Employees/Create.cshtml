@page
@model Eksamensprojekt___Gruppe_7.Pages.Employees.CreateModel
@using Eksamensprojekt___Gruppe_7.Models
@*	by Ahmed*@
@{
	ViewData["Title"] = "Tilføj ny medarbejder";
}

<h2>Tilføj ny medarbejder</h2>
<hr />

@* form for entering employee details *@
<form method="post" enctype="multipart/form-data">
	<div asp-validation-summary="ModelOnly"  class="text-danger"></div>
		
	@* employee name *@
	<div class="form-group">
		<label>Navn</label>
		<input type="text" asp-for="Employee.Name" class="form-control" />
		<span asp-validation-for="Employee.Name" class="text-danger"></span>
    </div>

	@* employee job title *@
	<div class="form-group">
		<label>Stilling</label>
		<input type="text" asp-for="Employee.JobTitle" class="form-control" />
		<span asp-validation-for="Employee.JobTitle" class="text-danger"></span>
	</div>

	@* employee email *@
	<div class="form-group">
		<label>Email</label>
		<input type="email" asp-for="Employee.Email" class="form-control" />
		<span asp-validation-for="Employee.Email" class="text-danger"></span>
	</div>

	@* employee phone number *@
	<div class="form-group">
		<label>Telefonnummer</label>
		<input type="text" asp-for="Employee.PhoneNumber" class="form-control" />
		<span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
	</div>

	@* employee picture upload *@
	<div class="form-group">
		<label>Billede</label>
		<input type="file" asp-for="UploadedPicture" class="form-control-file" />
    </div>

	@* save and cancel buttons *@
	<button type="submit" class="btn btn-primary">Gem</button>
	<a asp-page="/Employees/Index" class="btn btn-secondary">Annuller</a>
	</form>

    @* Display this message if the form data is invalid after submission*@
@if (!ModelState.IsValid)
{
		<div class="alert alert-danger">
			Der er fejl i formularen. Tjek venligst dine indtastninger.
		</div>
}


